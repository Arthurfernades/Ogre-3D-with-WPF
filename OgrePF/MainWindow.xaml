<Window x:Class="OgrePF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:OgreEng="clr-namespace:OgreEngine;assembly=OgreEngine"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Image x:Name="OgreImage" MinHeight="1" MinWidth="1" Margin="0" FocusVisualStyle="{x:Null}" Opacity="0.5" SizeChanged="OgreImage_SizeChanged">
            <Image.Source>
                <OgreEng:OgreImage x:Name="OgreSource"/>
            </Image.Source>
        </Image>
    </Grid>
</Window>
