<Window x:Class="OgrePF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:OgreEng="clr-namespace:OgreEngine;assembly=OgreEngine"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Image x:Name="RenterTargetControl" Stretch="Fill">
            <Image.Source>
                <OgreEng:OgreImage x:Name="ogreImage"/>
            </Image.Source>
        </Image>
        <ContentControl Content="ContentControl" HorizontalAlignment="Left" Margin="562,-25,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
