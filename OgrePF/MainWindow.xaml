<Window x:Class="OgrePF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:OgreEng="clr-namespace:OgreEngine;assembly=OgreEngine"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" 
        Loaded="Window_Loaded" Unloaded="Window_Unloaded" PreviewKeyUp="Window_PreviewKeyUp" PreviewKeyDown="Window_PreviewKeyDown" MouseWheel="Window_MouseWheel" SizeChanged="Window_SizeChanged" >
    <Window.Background>
        <ImageBrush ImageSource="/ogre_cave.png"/>
    </Window.Background>
    <Grid>
        <Image x:Name="img" Stretch="None" Margin="10" Width="Auto" Height="Auto" />
        <Button Content="Print" HorizontalAlignment="Left" VerticalAlignment="Top" Height="34" Width="78" Click="Button_Click"/>
    </Grid>
</Window>
